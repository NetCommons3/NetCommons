{
    "name":        "netcommons/net-commons",
    "description": "NetCommons Plugin",
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "netcommons"],
    "homepage":    "http://www.netcommons.org/",
    "license":     "NetCommons License",
    "authors": [
        {
            "name": "NetCommons Community",
            "homepage": "http://www.netcommons.org"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakedc/migrations":            "~2.2@stable",
        "cakephp/debug_kit":            "~2.2@stable",
        "chronon/mobile_detect":        "*@stable",
        "mustangostang/spyc":           "~0.6.2@stable",
        "netcommons/blocks":            "@dev",
        "netcommons/boxes":             "@dev",
        "netcommons/community-space":   "@dev",
        "netcommons/files":             "@dev",
        "netcommons/frames":            "@dev",
        "netcommons/m17n":              "@dev",
        "netcommons/pages":             "@dev",
        "netcommons/plugin-manager":    "@dev",
        "netcommons/private-space":     "@dev",
        "netcommons/public-space":      "@dev",
        "netcommons/roles":             "@dev",
        "netcommons/rooms":             "@dev",
        "netcommons/site-manager":      "@dev",
        "netcommons/user-roles":        "@dev",
        "netcommons/users":             "@dev",
        "netcommons/workflow":          "@dev",
        "netcommons/wysiwyg":           "@dev",
        "netcommons/auth-general":      "@dev",
        "netcommons/categories":        "@dev",
        "netcommons/containers":        "@dev",
        "netcommons/mails":             "@dev",
        "netcommons/topics":            "@dev",
        "netcommons/menus":             "@dev"
    },
    "config": {
        "vendor-dir": "vendors",
        "process-timeout": 10000
    }
}
