root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,yml}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 4
indent_style = space

[*.{css,ctp,php}]
indent_style = tab

[*.md]
max_line_length = off
trim_trailing_whitespace = false
